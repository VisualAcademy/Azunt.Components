@namespace Azunt.Components.Dialogs

@if (IsShow)
{
    <div class="modal fade show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5); display: block;">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close close" @onclick="Hide" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" @onclick="OnClickCallback">@ConfirmButtonText</button>
                    <button type="button" class="btn btn-secondary" @onclick="Hide">@CancelButtonText</button>
                </div>
            </div>
        </div>
    </div>
}
